.login {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  height: 100vh;
  background: #eef7f6
}
.login .avatar{
  width: 250rpx;
  height: 250rpx;
  overflow: hidden;
  border-radius: 50%;
  border:16rpx solid #f6705a;
  margin-bottom: 20rpx;
  margin-top: 283rpx

}
.login .name-wrap{
  color: #f6705a;
  font-size: 38rpx;
  position: relative;
  display: flex;
  justify-content: center;
  margin-bottom: 60rpx;
  width: 100%
}

.name-wrap::after{
  content: "";
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  width: 20%;
  height: 4rpx;
  background: #f6705a;
  transform: translateX(-50%)

}

button::after{ border: none; }
.button-hover { opacity: 0.6; }
.loginButton {
  width: 360rpx;
  height: 80rpx;
  border-radius: 16rpx;
  color: #fff;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  background: linear-gradient(to right,#EF9B75, #F6705A);
  box-shadow: 0px 11px 32px 0px rgba(246,112,90,0.30);
}
.login .binding{
  color: #F6705A;
  font-size: 24rpx;
  margin-top: 46rpx;

}
